{% extends '@OHMediaBackend/base.html.twig' %}

{% block meta_title %}FAQs{% endblock %}

{% block breadcrumbs %}
{{ bootstrap_breadcrumbs(
  bootstrap_breadcrumb(bootstrap_icon('question-circle-fill') ~ ' FAQs', 'faq_index'),
) }}
{% endblock %}

{% block actions %}
{% if is_granted(attributes.create, new_accordion) %}
<a href="{{ path('faq_create') }}" class="btn btn-sm btn-primary">
  <i class="bi bi-plus"></i> Add FAQ</a>
{% endif %}
{% endblock %}

{% block main %}
<div class="card">
  <div class="card-body">
    <div class="card-title card-title-with-count">
      <h1 class="card-title-heading">FAQs</h1>
      <div class="card-title-count">
        <span class="badge text-bg-primary">
          {{ pagination.count }}
        </span>
      </div>
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Questions</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {% for accordion in pagination.results %}
        <tr>
          <td>{{ accordion.name }}</td>
          <td>{{ accordion.items|length }}</td>
          <td>
            {% if is_granted(attributes.view, accordion) %}
            <a class="btn btn-sm btn-primary btn-action" href="{{ path('faq_view', {id: accordion.id}) }}" title="View">
              {{ bootstrap_icon('eye-fill') }}
              <span class="visually-hidden">View</span>
            </a>
            {% endif %}
            {% if is_granted(attributes.edit, accordion) %}
            <a class="btn btn-sm btn-primary btn-action" href="{{ path('faq_edit', {id: accordion.id}) }}" title="Edit">
              {{ bootstrap_icon('pen-fill') }}
              <span class="visually-hidden">Edit</span>
            </a>
            {% endif %}
            {% if is_granted(attributes.delete, accordion) %}
            <a class="btn btn-sm btn-danger btn-action" href="{{ path('faq_delete', {id: accordion.id}) }}" title="Delete" data-confirm="Are you sure you want to delete this FAQ? Clicking OK will take you to a verification step to delete this entry.">
              {{ bootstrap_icon('trash-fill') }}
              <span class="visually-hidden">Delete</span>
            </a>
            {% endif %}
          </td>
        </tr>
        {% else %}
        <tr><td colspan="100%">No FAQs found.</td></tr>
        {% endfor %}
      </tbody>
    </table>

    {{ bootstrap_pagination(pagination) }}

    <small>{{ bootstrap_pagination_info(pagination) }}</small>
  </div>
</div>
{% endblock %}
