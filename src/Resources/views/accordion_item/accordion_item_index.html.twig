{% extends '@OHMediaBackend/base.html.twig' %}

{% block meta_title %}Accordion Items{% endblock %}

{% block breadcrumbs %}
{{ bootstrap_breadcrumbs(
  bootstrap_breadcrumb(bootstrap_icon('arrow-down-square-fill') ~ ' Accordion Items', 'accordion_item_index'),
) }}
{% endblock %}

{% block actions %}
{% if is_granted(attributes.create, new_accordion_item) %}
<a href="{{ path('accordion_item_create') }}" class="btn btn-sm btn-primary">
  <i class="bi bi-plus"></i> Add Accordion Item</a>
{% endif %}
{% endblock %}

{% block main %}
<div class="card">
  <div class="card-body">
    <div class="card-title card-title-with-count">
      <h1 class="card-title-heading">Accordion Items</h1>
      <div class="card-title-count">
        <span class="badge text-bg-primary">
          {{ accordion_items|length }}
        </span>
      </div>
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>&nbsp;</th>
          <th>Accordion Item</th>
          <th></th>
        </tr>
      </thead>
      <tbody
        data-sortable
        data-sortable-csrf-name="{{ csrf_token_name }}"
        data-sortable-csrf-token="{{ csrf_token(csrf_token_name) }}"
        data-sortable-url="{{ path('accordion_item_reorder_post') }}"
      >
      {% for accordion_item in accordion_items %}
        <tr data-id="{{ accordion_item.id }}">
          <td data-handle>{{ bootstrap_icon('arrows-move') }}</td>
          <td>{{ accordion_item }}</td>
          <td>
            {% if is_granted(attributes.edit, accordion_item) %}
            <a class="btn btn-sm btn-primary btn-action" href="{{ path('accordion_item_edit', {id: accordion_item.id}) }}" title="Edit">
              {{ bootstrap_icon('pen-fill') }}
              <span class="visually-hidden">Edit</span>
            </a>
            {% endif %}
            {% if is_granted(attributes.delete, accordion_item) %}
            <a class="btn btn-sm btn-danger btn-action" href="{{ path('accordion_item_delete', {id: accordion_item.id}) }}" title="Delete" data-confirm="Are you sure you want to delete this accordion item? Clicking OK will take you to a verification step to delete this entry.">
              {{ bootstrap_icon('trash-fill') }}
              <span class="visually-hidden">Delete</span>
            </a>
            {% endif %}
          </td>
        </tr>
        {% else %}
        <tr><td colspan="100%">No accordion items found.</td></tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
